{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react-jsx", 
    "module": "commonjs", 
    "esModuleInterop": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "types": ["react/next", "react-dom/next", "node", "jest", "pg"],
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "noImplicitAny": false,  
    "noUnusedParameters": true,                      
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*", "__tests__"]
}
